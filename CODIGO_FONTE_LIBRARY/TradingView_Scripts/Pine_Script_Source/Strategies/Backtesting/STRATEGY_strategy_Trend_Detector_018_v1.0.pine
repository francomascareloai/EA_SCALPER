// Categoria: Technical
// Mercado: Forex
// Timeframe: H1

//@version=5
strategy("Trend_Detector_18", shorttitle="Trend_De", overlay=false, default_qty_type=strategy.percent_of_equity, default_qty_value=10)

// Parâmetros
length = input.int(14, "Length", minval=1)
stop_loss = input.float(3.1, "Stop Loss %", minval=0.1, step=0.1)
take_profit = input.float(9.8, "Take Profit %", minval=0.1, step=0.1)

// Estratégia
ema_fast = ta.ema(close, length)
ema_slow = ta.ema(close, length*2)
long_condition = ta.crossover(ema_fast, ema_slow)
short_condition = ta.crossunder(ema_fast, ema_slow)

// Execução
if (long_condition)
    strategy.entry("Long", strategy.long)
    strategy.exit("Exit Long", "Long", stop=close * (1 - stop_loss/100), limit=close * (1 + take_profit/100))

if (short_condition)
    strategy.entry("Short", strategy.short)
    strategy.exit("Exit Short", "Short", stop=close * (1 + stop_loss/100), limit=close * (1 - take_profit/100))
